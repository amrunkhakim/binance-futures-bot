[flake8]
max-line-length = 127
max-complexity = 10
select = E,W,F
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    F401,  # imported but unused (sometimes needed for exports)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    node_modules
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
